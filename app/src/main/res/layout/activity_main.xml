<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".MainActivity"    android:orientation="vertical"    >    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="ENKRIPSI AES ALGORITHM"        android:textSize="20sp"        android:gravity="center"        />    <EditText        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="30dp"        android:hint="Masukkan Text"        android:id="@+id/inputtext"        android:layout_marginHorizontal="10dp"        />    <EditText        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:layout_marginHorizontal="10dp"        android:hint="masukkan kata sandi"        android:id="@+id/inputPassword"        />    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="ENKRIPSI AES ALGORITHM"        android:textSize="20sp"        android:gravity="center"        android:layout_marginTop="20dp"        android:id="@+id/output"        />    <Button        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:shadowColor="@color/colorPrimaryDark"        android:text="ENKRIPSI"        android:id="@+id/encBtn"        />    <Button        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:text="Deskripsi"        android:id="@+id/decBtn"        /></LinearLayout>